.container
  .box{:style => "margin-top:20px"}
    .col-lg-12
      %h2.text-center Please Sign In
      %hr.colorgraph
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .row
            .col-xs-12.col-sm-12.col-md-12
              .form-group
                = f.email_field :email, :class=> "form-control input-lg", :placeholder=>"Email"
            .col-xs-12.col-sm-12.col-md-12
              .form-group
                = f.password_field :password, :class=> "form-control input-lg", :placeholder=>"Password"
            .col-xs-12.col-sm-12.col-md-12
              .form-group
                - if devise_mapping.rememberable?
                  .field
                    = f.check_box :remember_me
                    = f.label :remember_me
            .col-xs-12.col-sm-12.col-md-12
              .form-group
                = render "devise/shared/links"
          %hr.colorgraph
            .row
              .col-xs-6.col-sm-6.col-md-6
                = f.submit "Log in", :class=> "btn btn-lg btn-success btn-block"
              .col-xs-6.col-sm-6.col-md-6
                = link_to "Sign Up", new_user_registration_path, :class=> "btn btn-lg btn-primary btn-block"