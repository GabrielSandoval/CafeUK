.container
  .row
    .panel.panel-info
      .panel-body
        .row
          .col-md-3.col-lg-3{:align => "center"}
            = image_tag "user.png", :class => "img img-responsive"
            
            = link_to "View my orders", "#"
            %br
            = link_to "View my reservations", reservations_path
          /
            <div class="col-xs-10 col-sm-10 hidden-md hidden-lg"> <br>
            <dl>
            <dt>DEPARTMENT:</dt>
            <dd>Administrator</dd>
            <dt>HIRE DATE</dt>
            <dd>11/12/2013</dd>
            <dt>DATE OF BIRTH</dt>
            <dd>11/12/2013</dd>
            <dt>GENDER</dt>
            <dd>Male</dd>
            </dl>
            </div>
          .col-md-9.col-lg-9
            %table.table.table-user-information
              %tbody
                %tr
                  %td Name:
                  %td= "#{@user.first_name} #{@user.last_name}"
                %tr
                  %tr
                    %td Gender
                    %td= @user.gender
                  %tr
                    %td Location
                    %td= @user.location
                  %tr
                    %td Birthday
                    %td= @user.birthday
                  %tr
                    %td Email
                    %td= @user.email
                  %tr
                    %td Cellphone Number
                    %td= @user.contact_number
                  %tr
                    %td Bio
                    %td= @user.bio
            = link_to "Edit profile", edit_user_registration_path, :class=>"btn btn-primary"
      .panel-footer
        /
          <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>