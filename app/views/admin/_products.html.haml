.container-fluid.main-container
  .col-md-2.sidebar
    %ul.nav.nav-pills.nav-stacked
      %li
        = link_to "Home", page_path(:home)
      %li.active
        = link_to "Products", products_path
      %li
        = link_to "Orders", carts_path
      %li
        = link_to "Reservations", reservations_path
      %li
        = link_to "Feedback", "#"

  .col-md-10
    / BEGIN Portlet PORTLET
    .portlet
      .portlet-title
        .caption.caption-red
        %ul.nav.nav-tabs
          %li.active
            %a{"data-toggle" => "tab", :href => "#portlet_tab1"}
              Drinks
          %li
            %a{"data-toggle" => "tab", :href => "#portlet_tab2"}
              Cakes
          %li
            %a{"data-toggle" => "tab", :href => "#portlet_tab3"}
              Paninis
          %li
            %a{"data-toggle" => "tab", :href => "#portlet_tab4"}
              Salads

      .portlet-body
        .tab-content
          #portlet_tab1.tab-pane.active
            .col-lg-15
              %h2.text-left
                Drinks
            .row
              - drinks.each do |drink| 
                .col-sm-3
                  .card
                    .pull-right
                      = link_to "X", product_path(drink), :method=> :delete, :data=>{:confirm=>"Are you sure?"}
                    / <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                    .avatar{:align => "center"}
                      = image_tag "drinks.jpg", :class=>"img img-responsive"
                    .content.text-center
                      %p
                        = drink.name
                      = drink.description

              
