.container-fluid.main-container
  .col-md-2.sidebar
    %ul.nav.nav-pills.nav-stacked
      %li
        = link_to "Home", page_path(:home)
      %li
        = link_to "Products", products_path
      %li
        = link_to "Orders", carts_path
      %li.active
        = link_to "Reservations", reservations_path
      %li
        = link_to "Feedback", feedbacks_path
        
  / TABLE
  .col-md-10
    .col-md-12
      %h4 List of Reservations
      .pull-right
        =link_to "Create Reservation", new_reservation_path, :class=> "btn btn-md btn-primary btn-block"
    .col-md-12
      .table-responsive
        %table#mytable.table.table-bordred.table-striped
          %thead
            %th Reservation ID
            %th Customer Name
            %th Date to be Reserved
            %th Time to be Reserved
            %th Number of Customers
            %th Table Number
            %th Edit
            %th Delete
          %tbody
            -if reservations.empty?
              %tr
                %td.text-center{:colspan=>"8"}= "There are no reservations."
            -else

              - reservations.each do |reservation|
                %tr
                  %td= reservation.id
                  %td= "#{reservation.user.first_name} #{reservation.user.last_name}"
                  %td
                    -if !reservation.date.nil?
                      = "#{reservation.date.month}-#{reservation.date.day}-#{reservation.date.year}"
                    -else
                      = "n/a"
                  %td
                    -if !reservation.time.nil?
                      = "#{reservation.time.hour} : #{reservation.time.min}"
                    -else
                      = "n/a"
                  %td= reservation.number_of_people
                  %td= reservation.table_number
                  %td
                    %p{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Edit"}
                      = link_to "Edit", edit_reservation_path(reservation), :class=>"btn btn-primary btn-xs"
                  %td
                    %p{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Delete"}
                      = link_to "Delete", reservation_path(reservation), :method=> :delete, :data=>{:confirm=>"Are you sure?"},  :class=>"btn btn-danger btn-xs"