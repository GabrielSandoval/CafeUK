.container-fluid.main-container
  .col-md-2.sidebar
    %ul.nav.nav-pills.nav-stacked
      %li
        = link_to "Home", page_path(:home)
      %li.active
        = link_to "Products", products_path
      %li
        = link_to "Orders", carts_path
      %li
        = link_to "Reservations", reservations_path
      %li
        = link_to "Feedback", "#"
        
  / TABLE
  .col-md-10
    %h4 List of Reservations
    .table-responsive
      %table#mytable.table.table-bordred.table-striped
        %thead
          %th
            %input#checkall{:type => "checkbox"}/
          %th Reservation ID
          %th Customer Name
          %th Date and Time Of Reservation
          %th Number of Customers
          %th Table Number
          %th Edit
          %th Delete
        %tbody
          / -RECORDS LIST (STATIC RECORDS ONLY)
          - reservations.each do |reservation|
            %tr
              %td
                %input.checkthis{:type => "checkbox"}/
              %td= reservation.id
              %td= reservation.user
              %td
                = reservation.time
                | #{reservation.date}
              %td= reservation.number_of_people
              %td= reservation.table_number
              %td
                %p{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Edit"}
                  = link_to "Edit", edit_reservation_path(reservation), :class=>"btn.btn-primary.btn-xs"
              %td
                %p{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Delete"}
                  = link_to "Delete", reservation_path(reservation), :method=> :delete, :data=>{:confirm=>"Are you sure?"},  :class=>"btn.btn-primary.btn-xs"