.container
  .row
    .box
      -if admin?
        =render :partial => 'pages/admin_home', :locals=>{:announcements => @announcements}
      -else
        .col-lg-12.text-center
          .div{:class=>'carousel slide', :id => 'carousel-example-generic'}
            / Indicators
            %ol.carousel-indicators.hidden-xs
              %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "3", "data-target" => "#carousel-example-generic"}
              %li{"data-slide-to" => "4", "data-target" => "#carousel-example-generic"}
            / Wrapper for slides
            / Images should be consistent in dimensions. for this slideshow, image dimensions are at 843x403
            .carousel-inner
              .item.active
                = image_tag "slide-1.jpg", :class => 'img-responsive img-full', :alt => ""
              .item
                = image_tag "slide-2.jpg", :class => 'img-responsive img-full', :alt => ""
              .item
                = image_tag "slide-3.jpg", :class => 'img-responsive img-full', :alt => ""
              .item
                = image_tag "edited image 1.jpg", :class => 'img-responsive img-full', :alt => ""
              .item
                = image_tag "edited image 2.jpg", :class => 'img-responsive img-full', :alt => ""
            / Controls
            %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
              %span.icon-prev
            %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
              %span.icon-next
          %h2.brand-before
            %small Welcome to
          %hr
          %h1.brand-name Cafe UK
          %hr.tagline-divider

- if !admin?
  -@announcements.each do |announcement|
    .container
      .row
        .box
          .col-lg-12
            %hr
              %h3.text-center
                %strong= announcement.subject
              %hr
          .col-md-12
            %p{:style => "text-indent: 8%"}
              = announcement.content
          .clearfix
  / jQuery
  %script{:src => "js/jquery.js"}
  / Bootstrap Core JavaScript
  %script{:src => "js/bootstrap.min.js"}
  / Script to Activate the Carousel
  :javascript
  $('.carousel').carousel({
      interval: 5000 //changes the speed
  })