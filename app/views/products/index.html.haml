.container
  .box
    - if admin?
      = render :partial=>'admin/products', :locals=>{:drinks => @drinks, :cakes => @cakes, :paninis => @paninis, :salads => @salads }
    -else
      .col-lg-30
        .pull-right
          = link_to "Order Now", menus_path, :class=>"btn btn-primary"
        .portlet
          .portlet-title
            .caption.caption-red
            %ul.nav.nav-tabs
              %li.active
                %a{"data-toggle" => "tab", :href => "#portlet_tab1"}
                  Drinks
              %li
                %a{"data-toggle" => "tab", :href => "#portlet_tab2"}
                  Cakes
              %li
                %a{"data-toggle" => "tab", :href => "#portlet_tab3"}
                  Paninis
              %li
                %a{"data-toggle" => "tab", :href => "#portlet_tab4"}
                  Salads

          .portlet-body
            .tab-content
              #portlet_tab1.tab-pane.active
                .col-lg-15
                  %h2.text-left
                    Drinks
                .row
                  - @drinks.each do |drink| 
                    .col-xs-12.col-sm-6.col-md-4.col-lg-3
                      .menu-thumbnail
                        / <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                        .avatar{:align => "center"}
                          = image_tag "drinks.jpg", :class=>"img img-responsive"
                        .content.text-center
                          %p
                            = drink.name
                          = drink.description
                          %br
                          = "₱ #{format('%0.2f', drink.default_price)}"
                  
              #portlet_tab2.tab-pane
                .col-lg-15
                  %h2.text-left
                    Cakes
                .row
                  - @cakes.each do |cake| 
                    .col-xs-12.col-sm-6.col-md-4.col-lg-3
                      .menu-thumbnail
                        / <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                        .avatar{:align => "center"}
                          = image_tag "cakes.jpg", :class=>"img img-responsive"
                        .content.text-center
                          %p
                            = cake.name
                          = cake.description
                          %br
                          = "₱ #{format('%0.2f', cake.default_price)}"
                          

              #portlet_tab3.tab-pane
                .col-lg-15
                  %h2.text-left
                    Paninis
                .row
                  - @paninis.each do |panini|
                    .col-xs-12.col-sm-6.col-md-4.col-lg-3
                      .menu-thumbnail
                        / <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                        .avatar{:align => "center"}
                          = image_tag "paninis.jpg", :class=>"img img-responsive"
                        .content.text-center
                          %p
                            = panini.name
                          = panini.description
                          %br
                          = "₱ #{format('%0.2f', panini.default_price)}"
                          
              #portlet_tab4.tab-pane
                .col-lg-15
                  %h2.text-left
                    Salads
                .row
                  - @salads.each do |salad|
                    .col-xs-12.col-sm-6.col-md-4.col-lg-3
                      .menu-thumbnail
                        / <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
                        .avatar{:align => "center"}
                          = image_tag "salads.jpg", :class=>"img img-responsive"
                        .content.text-center
                          %p
                            = salad.name
                          = salad.description
                          %br
                          = "₱ #{format('%0.2f', salad.default_price)}"
                          
  - if @cart
    #shopping_cart
      =render :partial => "carts/cart"