.container
  .box
    .row
      .col-sm-12.col-md-12.col-xs-12.text-center
        - if flash[:cart_notice]
          %p#cart_notice
            = flash[:cart_notice]
        .div.pull-right
          = clear_cart_link
        %table.table.table-hover
          %thead
            %tr
              %th.col-sm-2.col-md-2.text-center Product
              %th.col-sm-4.col-md-4.text-center Name
              %th.col-sm-2.col-md-2.text-center Description
              %th.col-sm-1.col-md-1.text-center Quantity
              %th.col-sm-1.col-md-1.text-center Price
              %th.col-sm-1.col-md-1.text-center Total
              %th.col-sm-1.col-md-1
          %tbody
            - if !@cart.cart_items.blank?
              - @cart.cart_items.each do |item|
                .div{:id=>"cart_item_#{item.product_id}"}
                  = render :partial => "carts/item", :locals =>{:item => item}

            %tr
              %td  
              %td  
              %td
              %td  
              %td
              %td
                %h3 Total
              %td.text-right
                %h3
                  %strong
                    =@cart.total

            %tr
              %td  
              %td  
              %td
              %td
              %td  
              %td
                = link_to "Submit", cart_path(@cart, :cart => {:finalized => 1}),  :method => :put, :class=>"btn btn-success"
              %td
                = link_to "Back", :back, :class=>"btn btn-primary"
