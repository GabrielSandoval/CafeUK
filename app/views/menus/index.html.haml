                      .content
                        %p
                          = cake.name
                        = cake.description
                        %br
                        = "₱ #{format('%0.2f', cake.default_price)}"

            #portlet_tab3.tab-pane
              .col-lg-15
                %h3.text-left
                  Paninis
              .row
                - @paninis.each do |panini|
                  .col-xs-12.col-sm-6.col-md-4.col-lg-3
                    .menu-thumbnail
                      .avatar{:align => "center"}
                        = image_tag "paninis.jpg", :class=>"img img-responsive"
                      .mask1
                        .add-button
                          = add_product_link(panini)
                      .content
                        %p
                          = panini.name
